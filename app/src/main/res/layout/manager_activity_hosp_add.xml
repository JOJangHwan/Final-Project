<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="70dp"
            android:text="병원추가"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/person_picture"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/hosp">

        </ImageView>



    </LinearLayout>



    <EditText
        android:id="@+id/hosp_name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:hint="병원 이름"
        android:textSize="25dp"
        android:singleLine="true"
        ></EditText>

    <EditText
        android:id="@+id/hosp_addr"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:hint="병원 주소"
        android:textSize="25dp"
        android:singleLine="true"
        android:inputType="textEmailAddress"
        ></EditText>

    <EditText
        android:id="@+id/hosp_sec"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:hint="병원 진료과"
        android:textSize="25dp"
        android:singleLine="true"
        android:inputType="textEmailAddress"
        ></EditText>
    <EditText
        android:id="@+id/hosp_num"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:hint="병원 전화번호"
        android:textSize="25dp"
        android:singleLine="true"
        ></EditText>
    <EditText
        android:id="@+id/hosp_ex"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:hint="예비"
        android:textSize="25dp"
        android:singleLine="true"
        ></EditText>
    <TextView
        android:id="@+id/admin_identity"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:text="2"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/mem_exit"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="50dp"
        android:text="완료"
        android:textSize="25dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_menu"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"

        android:background="#71CCD8"
        app:itemIconSize="35dp"
        app:itemIconTint="@drawable/manager_bottom_color"
        app:itemTextColor="@drawable/manager_bottom_color"
        app:menu="@menu/manager_home_bottom_nav_menu"

        />

</LinearLayout>