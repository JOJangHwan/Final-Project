<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".user_login"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/register_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:ems="10"

        android:hint="비밀번호를 입력하세요"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/login_loginButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/register_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"

        android:ems="10"
        android:hint="아이디를 입력하세요"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/register_pwd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/login_findPasswordButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="68dp"
        android:text="비밀번호 찾기"
        android:backgroundTint="#F8CBAD"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/login_loginButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="3dp"
        android:text="로그인"
        android:backgroundTint="#F8CBAD"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/login_registerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#631D1D" />

    <Button
        android:id="@+id/login_registerButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="3dp"
        android:text="회원가입"
        android:backgroundTint="#F8CBAD"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/login_findPasswordButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="323dp"
        android:layout_height="156dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toTopOf="@+id/register_email"
        app:srcCompat="@drawable/covid_i"
        tools:layout_editor_absoluteX="44dp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>