<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".user_hosinformation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/viruserimage_imageview_detail"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/man"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"

        >

    </ImageView>




    <TextView
        android:id="@+id/virusername_textview_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_marginTop="30dp"
        android:textSize="23sp"
        android:text="이름 : "
        />
    <TextView
        android:id="@+id/viruserage_textview_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="23sp"
        android:text="나이 : "
        />
    <TextView
        android:id="@+id/viruserphnumber_textview_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="23sp"
        android:text="전화번호 : "
        />

    <TextView
        android:id="@+id/virusersex_textview_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="23sp"
        android:text="성별 : "
        />
    <TextView
        android:id="@+id/viruseraddress_textview_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="23sp"
        android:text="주소 : "
        />


</LinearLayout>