<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".manager_activity_gogu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0073B1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="정부지침 수정 및 등록"
            android:textColor="@android:color/white"
            android:textSize="12pt">

        </TextView>


    </LinearLayout>

    <Button
        android:id="@+id/button_gogu1"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:backgroundTint="#1DAC5C"
        android:text="거리두기"
        android:textColor="@android:color/white"></Button>

    <Button
        android:id="@+id/button_gogu2"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:backgroundTint="#1DAC5C"
        android:text="의료기관"
        android:textColor="@android:color/white"></Button>

    <Button
        android:id="@+id/button_gogu3"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:backgroundTint="#1DAC5C"
        android:text="집단시설, 다중이용시설"
        android:textColor="@android:color/white"></Button>

    <Button
        android:id="@+id/button_gogu4"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:backgroundTint="#1DAC5C"
        android:text="소상공인 및 기업"
        android:textColor="@android:color/white"></Button>

    <Button
        android:id="@+id/button_gogu5"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:backgroundTint="#1DAC5C"
        android:text="기업 및 시장"
        android:textColor="@android:color/white"></Button>

</LinearLayout>